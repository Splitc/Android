<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/feed_snippet_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/whitebuttoncustomback"
    android:clickable="true"
    card_view:cardCornerRadius="5dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:selectableItemBackground">

        <in.splitc.share.utils.ZCircularImageView
            android:id="@+id/user_image"
            android:layout_width="@dimen/height60"
            android:layout_height="@dimen/height60"
            android:scaleType="fitXY"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>

        <LinearLayout
            android:id="@+id/time_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/whitebuttoncustomback" >

            <in.splitc.share.utils.IconViewZ
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:textColor="@color/all_icon_color"
                android:text="@string/z_timer"
                android:textSize="@dimen/drawer_iconview_size"/>

            <in.splitc.share.utils.TextViewRegular
                android:id="@+id/pickup_timer"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:singleLine="true"
                android:textColor="@color/primary_text_color"
                android:textColorHint="@color/secondary_text_color"
                android:hint="@string/trip_start_time"
                android:paddingLeft="@dimen/size5"
                android:gravity="center_vertical"
                android:textSize="@dimen/size14"/>

        </LinearLayout>

        <in.splitc.share.utils.TextViewRegular
            android:id="@+id/user_trip_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/primary_text_color"
            android:textColorHint="@color/secondary_text_color"
            android:layout_marginLeft="@dimen/size25"
            android:textSize="@dimen/size14"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/user_image"
            android:layout_toLeftOf="@id/time_container"
            android:ellipsize="end"/>

        <in.splitc.share.utils.TextViewLight
            android:id="@+id/start_location"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/primary_text_color"
            android:singleLine="true"
            android:textSize="@dimen/size14"
            android:layout_weight="1"
            android:layout_below="@id/user_trip_title"
            android:layout_toRightOf="@id/user_image"
            android:layout_toLeftOf="@id/time_container"
            android:ellipsize="end"/>

        <in.splitc.share.utils.TextViewLight
            android:id="@+id/drop_location"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/primary_text_color"
            android:singleLine="true"
            android:textSize="@dimen/size14"
            android:layout_weight="1"
            android:layout_below="@id/start_location"
            android:layout_toRightOf="@id/user_image"
            android:layout_toLeftOf="@id/time_container"
            android:ellipsize="end"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>