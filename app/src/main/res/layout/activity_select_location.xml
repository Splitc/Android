<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/share_toolbar"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">

        <AutoCompleteTextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar_height"
            android:hint="@string/start_typing"
            android:background="@null"
            android:paddingLeft="@dimen/size35"
            android:textSize="@dimen/size14"
            android:singleLine="true"
            android:maxLines="1"
            android:textColorHint="@color/zhl_darkest"
            android:layout_margin="@dimen/size10"
            android:ellipsize="end"
            android:textColor="@color/textColorPrimary" />

        <in.splitc.share.utils.IconView
            android:id="@+id/search_close_btn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:layout_gravity="left|center_vertical"
            android:padding="@dimen/size15"
            android:text="@string/z_cross"
            android:layout_marginTop="-7dp"
            android:textColor="@color/default_font_color"
            android:textSize="@dimen/font_size45" />
    </FrameLayout>

    <in.splitc.share.utils.TextViewRegular
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size10"
        android:text="@string/recent_searches"
        android:textColor="@color/default_font_color"
        android:textSize="@dimen/size16" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />

</LinearLayout>