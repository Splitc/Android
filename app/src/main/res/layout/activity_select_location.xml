<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:elevation="@dimen/toolbar_elevation">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/location_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/size35"
            android:paddingRight="@dimen/size20"
            android:paddingTop="@dimen/size10"
            android:theme="@style/TextLabel">

            <AutoCompleteTextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="@dimen/action_bar_height"
                android:hint="@string/place_autocomplete_search_hint"
                android:textSize="@dimen/size14"
                android:textStyle="normal"
                android:singleLine="true"
                android:maxLines="1"
                android:textColorHint="@color/zhl_light"
                android:layout_margin="@dimen/size10"
                android:backgroundTint="@color/white"
                android:ellipsize="end"
                android:textColor="@color/white" />

        </android.support.design.widget.TextInputLayout>

        <com.application.splitc.utils.IconView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="@string/z_search"
            android:textColor="@color/all_icon_color"
            android:layout_gravity="left"
            android:layout_marginTop="-7dp"
            android:textSize="@dimen/drawer_iconview_size" />

        <com.application.splitc.utils.IconView
            android:id="@+id/search_close_btn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:layout_gravity="right"
            android:padding="@dimen/size10"
            android:text="@string/z_cross"
            android:layout_marginTop="-7dp"
            android:textColor="@color/all_icon_color"
            android:textSize="@dimen/drawer_iconview_size" />
    </FrameLayout>


</LinearLayout>