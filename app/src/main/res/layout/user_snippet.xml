<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/feed_snippet_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/whitebuttoncustomback"
    android:clickable="true"
    android:layout_margin="@dimen/size10"
    card_view:cardCornerRadius="@dimen/size5"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/size5">

        <in.splitc.share.utils.ZCircularImageView
            android:id="@+id/user_image"
            android:layout_width="@dimen/height60"
            android:layout_height="@dimen/height60"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>

        <in.splitc.share.utils.TextViewRegular
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/secondary_text_color"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/user_image"
            android:padding="@dimen/size5"
            android:textSize="@dimen/size12"/>

        <in.splitc.share.utils.TextViewRegular
            android:id="@+id/last_message"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/primary_text_color"
            android:textColorHint="@color/secondary_text_color"
            android:layout_marginLeft="@dimen/size25"
            android:textSize="@dimen/size14"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/user_image"
            android:layout_toLeftOf="@id/time_container"
            android:ellipsize="end"/>

        <in.splitc.share.utils.TextViewLight
            android:id="@+id/start_location"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/primary_text_color"
            android:singleLine="true"
            android:layout_marginLeft="@dimen/size25"
            android:textSize="@dimen/size14"
            android:layout_weight="1"
            android:layout_below="@id/user_trip_title"
            android:layout_toRightOf="@id/user_image"
            android:layout_toLeftOf="@id/time_container"
            android:ellipsize="end"/>

        <in.splitc.share.utils.TextViewLight
            android:id="@+id/drop_location"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/primary_text_color"
            android:singleLine="true"
            android:layout_marginLeft="@dimen/size25"
            android:textSize="@dimen/size14"
            android:layout_weight="1"
            android:layout_below="@id/start_location"
            android:layout_toRightOf="@id/user_image"
            android:layout_toLeftOf="@id/time_container"
            android:ellipsize="end"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>