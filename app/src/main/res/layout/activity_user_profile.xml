<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/user_info_top_frame"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" >

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="175dp"
            android:paddingBottom="30dp" >

            <ImageView
                android:id="@+id/drawer_user_info_background_image"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/black_trans_twenty" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/drawer_gradient_bottom" />

        </FrameLayout>

        <in.splitc.share.utils.ZCircularImageView
            android:id="@+id/user_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="95dp"
            android:layout_gravity="bottom|center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_icon" />
    </FrameLayout>

    <in.splitc.share.utils.TextViewRegular
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_info_top_frame"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="@dimen/size14"
        />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:minHeight="@dimen/action_bar_height"
        android:popupTheme="@android:style/ThemeOverlay.Material.Light"
        android:theme="@style/TransparentToolbarBaseTheme"
        android:layout_alignParentTop="true"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp" />

</RelativeLayout>