<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="@dimen/size10"
    card_view:cardCornerRadius="@dimen/size5"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/size5">

        <include
            android:id="@+id/location_container"
            layout="@layout/location_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <in.splitc.share.utils.TextViewLight
            android:id="@+id/pickup_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/primary_text_color"
            android:textColorHint="@color/secondary_text_color"
            android:paddingLeft="@dimen/size25"
            android:gravity="center_vertical"
            android:layout_below="@id/location_container"
            android:textSize="@dimen/size14"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>