<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/emptyStateHolder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:visibility="gone"
    android:orientation="vertical">

    <in.splitc.share.utils.IconViewV
        android:id="@+id/empty_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/font_size60"
        android:text="@string/empty_view_icon"
        android:textColor="@color/zhl_darkest"
        android:layout_margin="@dimen/size10" />

    <in.splitc.share.utils.TextViewRegular
        android:id="@+id/empty_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/size20"
        android:textColor="@color/zhl_darkest"/>

</LinearLayout>